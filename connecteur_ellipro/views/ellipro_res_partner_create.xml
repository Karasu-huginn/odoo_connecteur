<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="ellipro_res_partner_create_action" model="ir.actions.act_window">
        <field name="name">Ellipro Partner Creator</field>
        <field name="res_model">ellipro.res.partner.create</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <!--        <field name="binding_model_id" ref="project.model_project_project" />
        <field name="binding_view_types">form</field>-->
    </record>

    <menuitem name="Ellipro Partner"
        id="ellipro_partner"
        sequence="40"
        action="ellipro_res_partner_create_action">
    </menuitem>

    <record id="ellipro_res_partner_create_view" model="ir.ui.view">
        <field name="name">moddy.form</field>
        <field name="model">ellipro.res.partner.create</field>
        <field name="mode">primary</field>
        <field name="inherit_id" ref="multi_step_wizard.multi_step_wizard_form" />
        <field name="arch" type="xml">
            <xpath expr="//footer" position="before">
                <group name="configure" attrs="{'invisible': [('state', '!=', 'start')]}">
                    <field name="ellipro_search_type" />
                    <field name="ellipro_search_text" placeholder="Search... " />
                    <field name="ellipro_type_attribute" />
                </group>
                <group name="configure" attrs="{'invisible': [('state', '!=', 'configure')]}">
                    <group>
                        <field name="ellipro_results_list" />
                    </group>
                </group>
                <div name="final" attrs="{'invisible': [('state', '!=', 'final')]}">
                    <p>The partner has successfully been created !</p>
                </div>
            </xpath>
        </field>
    </record>
</odoo>