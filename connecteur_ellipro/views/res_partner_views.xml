<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_partner_form" model="ir.ui.view">
        <field name="name">res.partner.form.inherit.ellipro</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form" />
        <field name="arch" type="xml">
            <notebook position="inside">
                <page string="Ellipro">
                    <group>
                        <field name="ellipro_search_result_siret" />
                        <field name="ellipro_search_result_siren" />
                        <field name="ellipro_order_company" />
                        <field name="ellipro_order_product" />
                        <field name="ellipro_order_result" />
                        <button
                            name="order_button" type="object"
                            string="Click to order" />
                    </group>
                </page>
            </notebook>
        </field>
    </record>
</odoo>