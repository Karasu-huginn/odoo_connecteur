<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="pappers_captive_form" model="ir.ui.view">
        <field name="name">pappers.captive.form</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form" />
        <field name="arch" type="xml">
            <group name="coreff_core_fields" position="after">
                <field name="pappers_visibility" invisible="1" />
                <field name="parent_id" invisible="1" />
                <group string="Pappers" attrs="{'invisible': [('pappers_visibility', '=', False)]}">
                    <field name="pappers_api_token" password="1" required="1" />
                </group>
            </group>
        </field>
    </record>

</odoo>